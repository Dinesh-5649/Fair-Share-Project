<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/img_4"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_4"
        android:supportsRtl="true"
        android:theme="@style/Theme.FairShare">

        <!-- ONLY LOGIN PAGE SHOULD BE LAUNCHER -->
        <activity
            android:name=".LoginPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- NORMAL ACTIVITIES (NO launcher tags) -->
        <activity android:name=".RegisterPage" android:exported="false"/>
        <activity android:name=".ForgetPassword" android:exported="false"/>
        <activity android:name=".ShowGroups" android:exported="false"/>
        <activity android:name=".AddGroups" android:exported="false"/>
        <activity android:name=".ShowMembers" android:exported="false"/>
        <activity android:name=".AddMembers" android:exported="false"/>
        <activity android:name=".GroupChat" android:exported="false"/>
        <activity android:name=".CaptchaActivity" android:exported="false"/>

        <!-- SETTINGS RELATED -->
        <activity android:name=".SettingsActivity" android:exported="true"/>
        <activity android:name=".EditProfileActivity" android:exported="true"/>
        <activity android:name=".DeleteAccountActivity" android:exported="true"/>
        <activity android:name=".AboutActivity" android:exported="true"/>

        <!-- EXPENSE ACTIVITIES -->
        <activity android:name=".ExpenseSplitActivity" android:exported="false"/>
        <activity android:name=".ExpensesListActivity" android:exported="false"/>

    </application>

</manifest>
