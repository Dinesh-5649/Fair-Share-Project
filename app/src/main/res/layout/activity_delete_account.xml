<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGreen"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <TextView
        android:id="@+id/tvHeaderDelete"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/blue1"
        android:text="Delete Account"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Username Field -->
    <EditText
        android:id="@+id/etDeleteUser"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="30dp"
        android:hint="Confirm Username"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:paddingStart="15dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Password Field -->
    <EditText
        android:id="@+id/etDeletePass"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:hint="Confirm Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/etDeleteUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="40dp"
        android:text="Delete Account"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/etDeletePass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>